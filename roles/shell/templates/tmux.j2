# improve colors
set -g default-terminal 'screen-256color'

# act like vim
setw -g mode-keys vi
bind-key h select-pane -L
bind-key j select-pane -D
bind-key k select-pane -U
bind-key l select-pane -R
bind-key -r C-h select-window -t :-
bind-key -r C-l select-window -t :+

# set leader key
set -g prefix2 C-a

# Start windows and panes index at 1, not 0.
set -g base-index 1
setw -g pane-base-index 1

# Ensure window index numbers get reordered on delete.
set-option -g renumber-windows on

# split panes using | and -
bind p split-window -h
bind v split-window -v
unbind '"'
unbind %

# Enable mouse control (clickable windows, panes, resizable panes)
set -g mouse on

# reload config
unbind r
bind r source-file ~/.config/tmux/tmux.conf
# List of plugins
set -g @plugin 'tmux-plugins/tpm/tpm'
set -g @catppuccin_flavour 'mocha' # or frappe, macchiato, mocha
#set -g @plugin 'dracula/tmux'
#set -g @dracula-plugins "git spotify weather"
#set -g @dracula-show-fahrenheit false
#set -g @dracula-fixed-location "Munich/Bavaria"
#set -g @dracula-show-location false

set -g status-position top

# run catppuccin plugin
run ~/.config/tmux/plugins/catppuccin/catppuccin.tmux
# Initialize TMUX plugin manager (keep tis line 
# at the very bottom of tmux.conf).
run '~/.config/tmux/plugins/tpm/tpm'
